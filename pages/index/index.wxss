page {
  font-family: "PingHei", "Helvetica Neue", "Helvetica", "Arial", "Verdana", "sans-serif";
}

.tempNum {
  /* font-weight: 300; */
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  color: #fff;
  font-size: 30rpx;
  padding-top: 100rpx;
}

.bcg {
  position: fixed;
  z-index: -1;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.avatarInfo {
  display: flex;
  align-items: center;
  padding: 0 50rpx;
}

.avatarInfo .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatarInfo .name {
  padding: 0 20rpx;
}

.container .content {
  flex: 2;
  transition: 0.3s ease;
}

.content {
  position: relative;
  z-index: 2;
  width: 100%;
}

.info {
  padding-bottom: 50rpx;
}

.info image{
  width: 35rpx;
  height: 35rpx;
}

.info .temp, .info .weather, .info .pm {
  display: flex;
  justify-content: center;
}

.info .weather {
  margin-bottom: 30rpx;
}

.info .pm text {
  font-size: 24rpx;
  height: 1em;
  line-height: 1em;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background-color: rgba(240, 240, 240, 0.3);
}

.city {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 50rpx;
  font-size: 66rpx;
}

.city .time {
  font-size: 24rpx;
  text-align: right;
}

.message {
  font-size: 22rpx;
  padding: 25rpx 50rpx 0;
}

.temp {
  height: 250rpx;
  font-size: 200rpx;
}

.guide {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
  padding-top: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  margin-bottom: 20rpx;
}

.guide image {
  width: 35rpx;
  height: 35rpx;
  margin-left: 10rpx;
}

.guide .date {
  display: flex;
  align-items: center;
}

.guide .i {
  padding-bottom: 20rpx;
}

.livingIndex .item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, 0.2);
  padding: 20rpx 0;
  /* margin: 0 30rpx; */
  background: rgba(0, 0, 0, 0.6);
}

.livingIndex .item:last-child {
  border-bottom: none;
}

.livingIndex .icon {
  width: 60rpx;
  height: 60rpx;
  padding: 0 24rpx;
}

.livingIndex .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}

.livingIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.footer {
  text-align: center;
  font-size: 20rpx;
  margin: 10rpx 0;
}

.openSettingBtn {
  margin: 50rpx auto 0;
  width: 90%;
}
